@model Smart_Binance.Models.CustomerViewModel
@{
    ViewData["Title"] = "Index";
}
<center>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 style="padding-top:10%">Connect</h2>
        <h4>Connect to your <span style="color:#f6ba38">Binance</span> account.</h4>
        <hr />
        <div>
            <div class="row">
                <div class="col-xs-6">
                    <div style="padding-left:60%">
                        <h4>Name</h4>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group" style="float:left; width:50%">
                        <input asp-for="Customer.Name" class="form-control" />
                        <span asp-validation-for="Customer.Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6" style="padding-right:1%">
                    <div style="padding-left:60%">
                        <h4>Phone Number</h4>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group" style="float:left; width:50%">
                        <input asp-for="Customer.PhoneNumber" class="form-control" placeholder="Optional" />
                        <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-xs-4" style="padding-right:1%">
                    <div style="padding-left:60%">
                        <h4>API Key</h4>
                    </div>
                </div>
                <div class="col-xs-8">
                    <div class="form-group" style="float:left; width:75%">
                        <input asp-for="API.Key" class="form-control" />
                        <span asp-validation-for="API.Key" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4" style="padding-right:1%">
                    <div style="padding-left:60%">
                        <h4>API Secret</h4>
                    </div>
                </div>
                <div class="col-xs-8">
                    <div class="form-group" style="float:left; width:75%">
                        <input asp-for="API.Secret" class="form-control" />
                        <span asp-validation-for="API.Secret" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-default">Connect</button>
    </form>
</center>

