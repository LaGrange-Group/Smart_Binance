            <div class="slidecontainer" style="padding-top:13%; float:right">
                <input type="range" min="0" max="100" value="5" class="slider" id="myRange-stoploss">
            </div>
        </div>
        <div class="col-xs-3">
            <div style="padding-top:25%">
                <input id="stockstoplosspercentbox" class="form-control" style="color:red" type="number" value="0" />
            </div>
        </div>
        <div class="col-xs-1" style="padding:0px">
            <div style="padding-top:25%; padding:0px">
                <p style="padding-top:1.2em; font-size:1.3em; float:left">%</p>
            </div>
        </div>
    </div>
</center>
