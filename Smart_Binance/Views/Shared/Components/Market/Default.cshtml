@model Smart_Binance.Models.ViewModels.TokenViewModel
@{
    ViewData["Title"] = "Market";
}
<link href="~/lib/CustomCSS/InputTabs.css" rel="stylesheet" />
<script>
    var percentType = '@Model.PercentType';
    var baseTotal = '@Model.BaseTotal';
    var baseAmount = '@Model.BaseAmount';
    var lastPrice = '@Model.LastPrice';
    var amount = '@Model.Amount';
    baseDecimalAmount = '@Model.BaseDecimalAmount';
    priceDecimalAmount = '@Model.PriceDecimalAmount';
    assetDecimalAmount = '@Model.AssetDecimalAmount';
    alert("Base: " + baseDecimalAmount);
    alert("Amount: " + assetDecimalAmount);
    alert("Price: " + priceDecimalAmount);
    var minValue = '@Model.MinValue';
    EnableMarketSelect();
    EnableActivateStopTake();
</script>
<script src="~/js/MarketComponent/MarketComponent.js"></script>
<style>

</style>
<div id="marketbody" class="marketbodyClass">
    <form action="CreateBuy">
        <div id="input-padd">
            <h4 id="form-lables" style="font-size:15px">Units</h4>
            <center>
                <input class="form-control" id="amount" type="text" placeholder="0.000" value="@Model.Amount" />
            </center>
        </div>
        <div id="input-padd">
            <h4 id="form-lables" style="font-size:15px">Price</h4>
            <center>
                <input id="lastprice" class="form-control" type="text" placeholder="0.000" value="@Model.LastPrice.ToString("0.###############")" disabled />
            </center>
        </div>
        <div id="input-padd">
            <h4 id="form-lables" style="font-size:15px">Total</h4>
            <center>
                <input class="form-control" id="basetotal" type="text" placeholder="0.000" value="@Model.BaseAmount" />
            </center>
        </div>
        <div style="padding-top:1em">
            <center>

                <div class="btn-group" role="group" id="PercentTypeGroup" data-toggle="button" aria-label="Basic example">
                    <button id="button-basepercent-10" type="button" class="btn percTypeBtn" value="0.1">10%</button>
                    <button id="button-basepercent-25" type="button" class="btn percTypeBtn" value="0.25">25%</button>
                    <button id="button-basepercent-50" type="button" class="btn percTypeBtn" value="0.50">50%</button>
                    <button id="button-basepercent-100" type="button" class="btn percTypeBtn" value="1">100%</button>
                </div>
            </center>
        </div>
    </form>
</div>
