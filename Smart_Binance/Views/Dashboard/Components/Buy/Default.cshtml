@model Smart_Binance.Models.ViewModels.TokenViewModel
@{
    ViewData["Title"] = "Default";
}
<link href="~/lib/CustomCSS/InputTabs.css" rel="stylesheet" />
<div>
    <form action="CreateBuy">
        <div id="input-padd">
            <h4 id="form-lables" style="font-size:15px">Units</h4>
            <center>
                <input class="form-control" type="text" placeholder="0.000" value="@Model.Amount" />
            </center>
        </div>
        <div id="input-padd">
            <h4 id="form-lables" style="font-size:15px">Price</h4>
            <center>
                <input class="form-control" type="text" placeholder="0.000" value="@Model.LastPrice" />
            </center>
        </div>
        <div id="input-padd">
            <h4 id="form-lables" style="font-size:15px">Total</h4>

            <center>
                <input class="form-control" type="text" placeholder="0.000" value="@Model.BaseAmount" />
            </center>
        </div>
    </form>
</div>
