@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="row" style="padding-top:10%">
    <div class="col-md-12">
        <center>
            <section>
                <form method="post">
                    <h3>Log in.</h3>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <div style="padding-left:60%">
                                    <h4>Email</h4>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group" style="width:50%; float:left">
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <div style="padding-left:60%">
                                    <h4>Password</h4>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group" style="width:50%; float:left">
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" style="float:right">
                                    <div class="checkbox">
                                        <label class="switch">
                                            @Html.CheckBoxFor(model => model.Input.RememberMe)
                                            <div class="slider round">
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div style="float:left; padding-top:1%">
                                    <h4>Remeber me</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./ForgotPassword"><h4>Forgot your password?</h4></a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><h4>Register</h4></a>
                        </p>
                    </div>
                </form>
            </section>
        </center>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
